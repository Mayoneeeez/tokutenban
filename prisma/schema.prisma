generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Game {
  game_id           String   @id @default(uuid())
  game_name         String   @db.VarChar(100)
  url_path          String   @unique @db.VarChar(50)
  memo              String?  @db.Text
  created_datetime  DateTime @default(now())
  updated_datetime  DateTime @updatedAt
  scores            Score[]

  @@map("games")
}

model Score {
  score_id         String   @id @default(uuid())
  game_id          String
  player_name      String   @db.VarChar(50)
  round_number     Int
  score            Int
  created_datetime DateTime @default(now())
  updated_datetime DateTime @updatedAt
  game             Game     @relation(fields: [game_id], references: [game_id], onDelete: Cascade)

  @@unique([game_id, player_name, round_number], name: "unique_round_score")
  @@map("scores")
}

view PlayerTotal {
  game_id      String  @id
  player_name  String
  total_score  Int

  @@map("player_totals")
}

view GameRanking {
  game_id      String  @id
  player_name  String
  total_score  Int
  rank         Int

  @@map("game_rankings")
}